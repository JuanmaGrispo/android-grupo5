<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:textStyle="bold"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Funcional 18:00 — Palermo"/>

        <TextView
            android:id="@+id/tvDiscipline"
            android:textSize="13sp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Crossfit"/>

        <TextView
            android:id="@+id/tvWhen"
            android:drawableStart="@android:drawable/ic_lock_idle_alarm"
            android:drawablePadding="6dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Jue 19 Sep · 18:00 (60 min)"/>

        <TextView
            android:id="@+id/tvLocation"
            android:drawableStart="@android:drawable/ic_dialog_map"
            android:drawablePadding="6dp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sede Palermo"/>

        <TextView
            android:id="@+id/tvStatus"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="CONFIRMED"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>